<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    tools:context=".WallpaperChangerActivity"
    android:id="@+id/mLinearLayout">
    <Button android:id="@+id/avvia"
        android:text="@string/startService"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="#baf347" />
    <Button android:id="@+id/arresta"
        android:text="@string/stopService"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="#BAF347"
        android:layout_marginTop="5dp" />
    <Button android:id="@+id/esci"
        android:text="@string/finish"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="#BAF347"
        android:layout_marginTop="5dp" />
</LinearLayout>